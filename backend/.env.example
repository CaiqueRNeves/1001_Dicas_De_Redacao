# Configurações do Servidor
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Configurações do Banco de Dados
DATABASE_PATH=./data/database.sqlite

# Configurações JWT
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Configurações de Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@1001dicasderedacao.com
EMAIL_FROM_NAME=1001 Dicas de Redação

# Configurações de Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Configurações de Pagamento
# PIX
PIX_KEY=your-pix-key

# Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN=your-mercado-pago-token
MERCADO_PAGO_PUBLIC_KEY=your-mercado-pago-public-key

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Segurança
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_key
CORS_ORIGIN=http://localhost:3000

# Configurações de Log
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Configurações LGPD
LGPD_RETENTION_DAYS=2555
LGPD_ANONYMIZATION_ENABLED=true

# Configurações de Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Configurações de Cache
CACHE_ENABLED=true
CACHE_TTL=3600

# Configurações de Monitoramento
MONITORING_ENABLED=false
SENTRY_DSN=your-sentry-dsn

# Configurações do YouTube API
YOUTUBE_API_KEY=your-youtube-api-key

# Configurações de Webhook
WEBHOOK_SECRET=your_webhook_secret_for_payments

# Configurações de Desenvolvimento
DEBUG_MODE=false
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Configurações de Docker
DOCKER_DB_PATH=/app/data
DOCKER_UPLOADS_PATH=/app/uploads
DOCKER_LOGS_PATH=/app/logs

# Configurações de SSL (Para produção)
SSL_ENABLED=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Configurações de CDN (Para produção)
CDN_ENABLED=false
CDN_URL=https://cdn.1001dicasderedacao.com

# URLs de Serviços Externos
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Configurações de Analytics
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# Configurações de Notificações Push
PUSH_NOTIFICATION_ENABLED=false
FIREBASE_SERVER_KEY=your-firebase-server-key

# Configurações de Social Login
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Configurações de Integração com APIs Educacionais
ENEM_API_URL=https://api.enem.example.com
ENEM_API_KEY=your-enem-api-key

# Configurações de Machine Learning (Futuro)
ML_ENABLED=false
ML_API_URL=http://localhost:5000
ML_API_KEY=your-ml-api-key

# Configurações de Localização
DEFAULT_TIMEZONE=America/Sao_Paulo
DEFAULT_LOCALE=pt-BR

# Configurações de Features Flags
FEATURE_AUTO_CORRECTION=false
FEATURE_GAMIFICATION=false
FEATURE_MOBILE_APP=false
FEATURE_SOCIAL_SHARING=true